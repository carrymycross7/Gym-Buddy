<%- include("../partials/header") %>
		
<div class='container'>
	<div class='row'>
		<h1>Edit <%=workout.name%> </h1>

		<form action='/workouts/<%=workout._id%>?_method=PUT' method='POST'>
			<div class='form-group'>
				<input class='form-control'type='text' name='workout[name]'placeholder='<%=workout.name%>'>
			</div>
			<div class='form-group'>
				<input class='form-control'type='text' name='workout[image]'placeholder='<%=workout.image%>'>
			</div>
			<div class='form-group'>
				<input class='form-control'type='text' name='workout[description]'placeholder='<%=workout.description%>'>
			</div>
			<div class='form-group'>
				<button class='btn btn-lg btn-default'>Add Workout</button>
			</div>
		</form>

		<a href='/workouts'>Back To Workouts</a>
	</div>	
</div>
<%- include("../partials/footer") %>